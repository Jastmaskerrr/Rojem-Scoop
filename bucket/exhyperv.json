{
    "version": "1.3.1",
    "description": "A GUI software that provides advanced HyperV virtual machine features such as DDA and GPU-PV.",
    "homepage": "https://github.com/Justsenger/ExHyperV",
    "url": "https://github.com/Justsenger/ExHyperV/releases/download/v1.3.1/V1.3.1.7z",
    "hash": "d3b90f283e3ec74fc735a717bad594cc996fc6cdb21b972408a287768066bb66",
    "license": "GPL-3.0-or-later",
    "suggest": {
        "Microsoft .NET 8.0 Desktop Runtime": "windowsdesktop-runtime-lts"
    },
    "shortcuts": [
        [
            "ExHyperV.exe",
            "ExHyperV"
        ]
    ],
    "pre_install": [
        "$config_path = \"$persist_dir\\config.xml\"",
        "",
        "if (!(Test-Path $config_path) -or (Get-Item $config_path).Length -eq 0) {",
        "    if (!(Test-Path \"$persist_dir\")) { New-Item \"$persist_dir\" -ItemType Directory -Force | Out-Null }",
        "    ",
        "    Write-Host \"Generating default config.xml...\" -ForegroundColor Yellow",
        "    ",
        "    $content = @(",
        "        '<?xml version=\"1.0\" encoding=\"utf-8\"?>',",
        "        '<Config>',",
        "        '  <Language>zh-CN</Language>',",
        "        '</Config>'",
        "    )",
        "    ",
        "    Set-Content -Path $config_path -Value $content -Encoding UTF8",
        "}"
    ],
    "persist": "config.xml",
    "checkver": "github",
    "autoupdate": {
        "url": "https://github.com/Justsenger/ExHyperV/releases/download/v$version/V$version.7z"
    }
}
